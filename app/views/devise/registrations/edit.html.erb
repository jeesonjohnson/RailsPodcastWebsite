<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<div id="main-edit-container">
  <div class="row">
    <div class="col-sm-12">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
    <div class="col-sm-12" id="edit-user-title">
      <h4 class="text-center custom-devise-title"><%= t('custom.edit.title') %>
        <%= current_user.full_user_name %>
      </h4>
    </div>
    <div class="col-sm-12" id="field">
      <p><%= f.label :first_name %></p>
      <%= f.text_field :first_name, autofocus: true, autocomplete: t('first_name'), class: "form-control"%>
    </div>
    <div class="col-sm-12" id="field">
      <p><%= f.label :last_name %></p>
      <%= f.text_field :last_name, autocomplete: t('last_name'), class: "form-control"%>
    </div>
    <div class="col-sm-12" id="field">
      <p><%= f.label :email %></p>
      <%= f.email_field :email, autocomplete: t('email'), class: "form-control"%>
    </div>

    <div id="profile-upload-div">
      <div class="col-sm-6">
        <div id="user-profile-pic">
          <% if resource.avatar.attached? %>
            <%= image_tag resource.avatar%>
          <%else%>
            <%= image_tag "profile.png"%>
          <%end%>
        </div>
      </div>
      <div class="col-sm-6">
        <h4 style="font-size:30px;">
          Choose your profile picture</h4>
        <br/><br/>
        <%= f.file_field :avatar, style: "font-size:20px" %>
      </div>
    </div>

    <div class="col-sm-12" id="field">
      <p><%= f.label :description %></p>
      <%= f.text_field :description, autocomplete: "description", class: "form-control"%>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="col-sm-12" id="field">

        <%= t('custom.edit.waiting') %>
        <%= resource.unconfirmed_email %>

      </div>
    <% end %>

    <div class="col-sm-12" id="field">
      <p><%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>
            <%= t('custom.edit.min') %>
            <i><%= t('custom.edit.no_blank') %></i>
          </em>
        <% end %>
      </p>
      <%= f.password_field :password, autocomplete: "new-password",class: "form-control"%>
    </div>

    <div class="col-sm-12" id="field">
      <p><%= f.label :password_confirmation %></p>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control"%>
    </div>

    <div class="col-sm-12" id="field">
      <p><%= f.label :current_password %></p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control"%>
    </div>

    <div class="col-sm-12" id="field">
      <%= f.submit t("edit.edit"), class: "btn btn-default btn-lg"%>
    </div>
    <div class="col-sm-12" id="back-button-style">
      <h3 class="btn btn-default btn-lg sign-up-devise-button"><%= link_to t('edit.back'), root_path%>
      </h3>
    </div>
  </div>
</div>

<% end %>

<div id="delete-account-container">
  <div id="delete-account-div">
    <div class="row">
      <div class="col-sm-12">
        <p><%= t('custom.edit.cancel_account') %></p>
        <%= button_to t('edit.cancel'), registration_path(resource_name),class:"btn btn-default btn-lg", data: { confirm: t("edit.confirm") }, method: :delete %>
      </div>
    </div>
  </div>
</div>
