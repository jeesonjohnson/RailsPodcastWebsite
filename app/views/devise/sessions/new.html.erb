<h1 style="font-weight: bold;">Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
   <h3><%= f.label :email %></h3>
  <div class="input-group input-group-lg">
  <span class="input-group-addon" id="sizing-addon1">Email</span>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width:640px; height:50px"%>
  </div><br />


  <h3><%= f.label :password %></h3>

  <div class="input-group input-group-lg">
  <span class="input-group-addon" id="sizing-addon1"><%= f.label :password %> </span>
  
    <%= f.password_field :password, autocomplete: "new-password",class: "form-control", style: "width:600px;height:50px" %>

  </div><br />


  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %><br/>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-default btn-lg"%>
  </div>


<% end %>


<%= render "devise/shared/links" %>
