<div id="generic-container">
  <div>
    <h4 class="text-center"><%= t('log_in')%></h4>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div>
    <h3><%= f.label :email %></h3>
    <div class="input-group input-group-lg">
      <span class="input-group-addon" id="sizing-addon1">Email</span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "height:50px"%>
    </div>
  </div>

  <div>
    <h3><%= f.label :password %></h3>
    <div class="input-group input-group-lg">
      <span class="input-group-addon" id="sizing-addon1"><%= f.label :password %>
      </span>
      <%= f.password_field :password, autocomplete: "new-password",class: "form-control", style: "height:50px" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, style: "" %>
      <%= f.label :remember_me %>
    </div>
  <% end %><br/>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-default btn-lg", style:"width:200px"%>
  </div>

<% end %>

<%= render "devise/shared/links" %>

</div>
