<%- if controller_name != 'podcastapp' %>
  <nav class="navbar navbar-default container bold-text-nav">
    <div class="container-fluid ">
      <div class="navbar-header navbar-menu-wrapper">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only"><%=t('home_navbar.toggle')%></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%# The navigation bar, presents the ability for the user to navigate throught the application %>
        <%= link_to image_tag('logo.png', width:"80px", height:"80px"), root_path, class: "navbar-brand center" %>
        <%= link_to t('app_title'), root_path, class: "navbar-brand bold-text-nav", id:"logo" %>
      </div>
      <% if(!current_user.present?)%>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to t('home_navbar.about'), about_path %>
          </li>
          <li>
            <%= link_to t('home_navbar.contact'), contact_path %>
          </li>
          <li>
            <div><%= link_to t("log_in"), user_session_path, class: "btn btn-default login-button" %></div>
          </li>
        </ul>
      </div>
      <% end %>
    </div>
  </nav>
<% else %>

  <div class="generic">
    <h1><%=t('home_navbar.welcome')%></h1>

    <%= link_to t("log_out"), destroy_user_session_path, method: :delete %>

  </div>

<%end%>
