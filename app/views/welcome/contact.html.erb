
<div class="container" id="mail-overall-container">
  <h1 class="text-center"><%= t('contact.title') %></h1>
  <p class="text-center"><%= t('contact.description') %></p>
  <%= form_tag request_contact_path, method: :post do %>
    <div class="row">
        <div class="col-sm-12">
          <%= label_tag :name, t('contact.name') %>
          <%= text_field_tag :name, '', title: t('contact.enter_name'), class: "contact-entry form-control" %>
        </div>
        <div class="col-sm-6">
          <%= label_tag :email, t('contact.email') %>
          <%= email_field_tag :email, '', title: t('contact.enter_email'), class: "contact-entry form-control" %>
        </div>
        <div class="col-sm-6">
          <%= label_tag :telephone, t('contact.telephone') %>
          <%= telephone_field_tag :telephone, '', title: t('contact.enter_telephone'), class: "contact-entry form-control" %>
        </div>
        <div class="col-sm-12">
          <%= label_tag :message, t('contact.message') %>
          <%= text_area_tag :message, '', title: t('contact.enter_message'), class: "form-control rounded-0", rows: 15%>
        </div>
        <div class="pull-right">
              <%= submit_tag t('contact.submit'), class: "btn btn-default login-button", style:"width:auto;" %>
          </div>
    </div>

  <%end%>

</div>
